<% include partials/header %>
<div id='layout' class='pure-g'>
	<div class="sidebar pure-u-1 pure-u-md-1-4">
		<div class="header">
	        <h1 class="brand-title"><a href='/'>DonutFindr</a></h1>
	        <h2 class="brand-tagline">Search your city or zip code for donuts</h2>
	
		<div class='pure-form'>
			<form action="/results" method="POST"> 
				<input type="text" name="locationName" placeholder="Beverly Hills, CA or 90210" class="pure-input"><br>
				<button class='pure-button'>Submit</button>
			</form>
        </div>
        
        <div class='footer'>
	        <nav class="nav">
	            <ul class="nav-list">
	                <li class="nav-item">
	                    <a class="pure-button" href="http://purecss.io">PureCSS</a>
	                </li>
	                <li class="nav-item">
	                    <a class="pure-button" href="https://github.com/Yelp/yelp-fusion">YelpFusion</a>
	                </li>
	            </ul>
	        </nav>
	    </div>
		</div>
	</div>

<div class="content pure-u-1 pure-u-md-3-4">
  <h3 class='content-subhead'>Your Search Results</h3>
	  <% bs.forEach(function(b) { %>
	  <div class='posts'>
	    <h4 class='post-title'><%=b.name%></h4>
	    <p class='post-meta'>
	      <span><%=b.location.address1%></span><br>
        <strong><%=b.location.city + ", " + b.location.state%></strong>
        <span><%=b.phone%></span>
      </p>
      <div class='post-description'>
        <img src="<%=b.image_url%>" class='post-images pure-img' width='300'>
        <aside class='description'>
          <p>Map Data</p>
          <p>Description:</p>
        </aside>
      </div>
    </div>
    <% }); %>
</div>
	    
	    
	    
	    
	    
	  </div>
        <!-- A wrapper for all the blog posts -->
        
            
       
	
</div>
</div>
    
      
    
<% include partials/footer %>